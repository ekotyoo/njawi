<?xml version="1.0" encoding="utf-8"?>
    <manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ekotyoo.njawi">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".NjawiApp"
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher_rubah"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_rubah_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Njawi">
        <activity
            android:name=".HomeActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Njawi.NoActionBar">
        </activity>
    </application>
</manifest>